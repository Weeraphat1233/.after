import tkinter as tk

root = tk.Tk()
root.title("นับเวลาถอยหลัง")

label = tk.Label(root, text="", font=("TH Sarabun New", 30))
label.pack(pady=20)

count = 10

def countdown():
    global count
    if count > 0:
        label.config(text=str(count))
        count -= 1
        root.after(1000, countdown)
    else:
        label.config(text="วีรภัฏ หุณฑะสิริ\nลาส\nม.5/8\nแผนเทคโนโลยี\nอยากเรียนคณะวิศวกรรมคอมพิวเตอร์")

countdown()
root.mainloop()
